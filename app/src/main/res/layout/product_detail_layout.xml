<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.productDetail"
    android:background="@color/mexar_gris1">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mexar_gris1">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mexar_gris1"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/productDetailSlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- TODO: Update blank fragment layout -->
        <android.support.v4.view.ViewPager
            android:id="@+id/productDetailViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/ProductDetailTitle"
            style="@style/RemarkField"
            android:layout_width="0dp"
            android:layout_weight="0.90"
            android:layout_height="wrap_content"
            android:text="Product: "/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ProductDetailDescription"
            style="@style/NormalSmallField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Descripción" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:weightSum="1">

        <TextView
            style="@style/RemarkSmallField"
            android:layout_width="0dp"
            android:layout_weight="0.90"
            android:layout_height="wrap_content"
            android:text="Presentaciones: "/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ProductDetailPresentations"
            style="@style/NormalSmallField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ProductDetailFicha"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_pdf"
            android:paddingLeft="40dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="Ficha Técnica" />





    </LinearLayout>


</LinearLayout>

</ScrollView>
</FrameLayout>