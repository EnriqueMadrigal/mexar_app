<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.datalabor.soporte.mexar.activity.Aviso">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarAviso"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/toolbar_height"
            app:titleTextColor="@android:color/white"
            android:background="@color/mexar_blue2"
            android:theme="@style/Theme.FixedSize">

        </android.support.v7.widget.Toolbar>


    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_image_height"
        android:layout_centerInParent="true"
        android:contentDescription="ss"
        android:paddingTop="0dp"
        android:src = "@drawable/banner_mexar2"/>


    <ImageButton
        android:id="@+id/backButton_aviso"
        android:layout_width="@dimen/toolbar_image_height"
        android:layout_height="@dimen/toolbar_image_height"
        android:layout_centerVertical="true"
        android:contentDescription="ss"
        android:paddingTop="0dp"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:background="@color/transparent"
        android:src = "@drawable/back_button"/>


</RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/aviso_privacidad2"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="200dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2">


        <com.datalabor.soporte.mexar.utils.JustifyTextView
            android:id="@+id/aviso_Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="80dp"
            android:text="@string/aviso_completo"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:minLines="1"
            android:maxLines = "2000"
            android:scrollbars = "vertical"/>


    </LinearLayout>





</android.support.constraint.ConstraintLayout>
